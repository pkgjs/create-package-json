{
  "name": "create-package-json",
  "version": "1.2.0",
  "description": "Create a package.json",
  "main": "index.js",
  "type": "commonjs",
  "bin": {
    "create-package-json": "bin/create-package-json"
  },
  "scripts": {
    "test": "mocha",
    "test:debug": "mocha --inspect --inspect-brk --timeout=0",
    "test:cover": "c8 mocha",
    "lint": "semistandard",
    "lint:fix": "semistandard --fix",
    "debug": "mocha --inspect --inspect-brk",
    "prerelease": "npm run lint && npm test && standard-version && npm login",
    "release": "npm publish --access=public --tag=\"${1:-latest}\"",
    "postrelease": "(npm logout || true) && git push --follow-tags && gh release create --draft --generate-notes \"v$(cat package.json | jq -r .version)\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wesleytodd/create-package-json"
  },
  "keywords": [
    "scaffold",
    "generator",
    "package.json",
    "packagejson",
    "create"
  ],
  "author": "Wes Todd <wes@wesleytodd.com>",
  "funding": {
    "type": "GitHub Sponsor",
    "url": "https://github.com/sponsors/wesleytodd"
  },
  "license": "MIT",
  "dependencies": {
    "@npmcli/map-workspaces": "^5.0.3",
    "@npmcli/name-from-folder": "^4.0.0",
    "@npmcli/package-json": "^5.0.0",
    "fs-extra": "^11.1.1",
    "loggerr": "^3.0.0",
    "npm-package-arg": "^11.0.1",
    "opta": "^1.1.5",
    "safe-parse-list": "^0.1.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "fs-test-fixtures": "^0.2.0-next",
    "mocha": "^11.7.5",
    "semistandard": "^17.0.0",
    "standard-version": "^9.0.0"
  }
}
